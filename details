    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const movieDetails = {
          title: "Indian 2",
          poster: "https://upload.wikimedia.org/wikipedia/en/6/6f/Indian_2_poster.jpg", // Replace with actual poster URL
          director: "Shankar",
          genre: "Drama",
          about: "This is a Good Film",
          showtimes: [
            { date: "2024-10-12", time: "02:45 PM", seats: 18, format: "4K Dolby Atmos 7.1" },
            { date: "2024-10-13", time: "05:00 PM", seats: 20, format: "4K Dolby Atmos 7.1" },
          ],
        };

        // Populate movie details
        document.getElementById("movieTitle").innerText = movieDetails.title;
        document.getElementById("moviePoster").src = movieDetails.poster;
        document.getElementById("movieDirector").innerText = movieDetails.director;
        document.getElementById("movieGenre").innerText = movieDetails.genre;
        document.getElementById("movieAbout").innerText = movieDetails.about;

        // Populate showtime table
        const showtimeTable = document.getElementById("showtimeTable");
        movieDetails.showtimes.forEach((show) => {
          const row = `
            <tr>
              <td>${show.date}</td>
              <td>${show.time}</td>
              <td>${show.seats}</td>
              <td><button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#bookingModal">Book Tickets</button></td>
            </tr>
          `;
          showtimeTable.innerHTML += row;
        });
      });
    </script>
